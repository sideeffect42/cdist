# Get an existing users shadow entry.
#

name=$__object_id

case $("${__explorer}/os")
in
  freebsd)
    database='passwd'
    db_file='/etc/master.passwd'
    ;;
  macosx)
    # Mac OS X doesnâ€™t use files to store user accounts anymore.
    # Most system users can still be found there, though.
    # XXX: It is unclear if these files are updated by the system utilities!
    db_file='/etc/master.passwd'
    ;;
  netbsd|openbsd)
    db_file='/etc/master.passwd'
    ;;
  *)
    # Default to using shadow passwords
    database='shadow'
    ;;
esac
test -n "${db_file}" || db_file="/etc/${database}"

if test -n "${database}" && command -v getent >/dev/null 2>&1
then
  # shellcheck disable=SC2015
  getent "${database}" "${name}" 2>/dev/null && exit || true  # fallback to file
fi
if test -f "${db_file}"
then
  grep -e "^${name}:" "${db_file}" || true  # ignore failure
fi
